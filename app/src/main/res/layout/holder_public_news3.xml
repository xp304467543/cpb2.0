<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_15"
    android:paddingTop="@dimen/dp_15"
    android:paddingEnd="@dimen/dp_15">

    <TextView
        android:id="@+id/tvTitle_h3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_14"
        tools:text="dsfsfsfsfs" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_108"
        android:layout_marginTop="@dimen/dp_14">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:placeholderImage="@mipmap/ic_placeholder"
            app:placeholderImageScaleType="fitXY"
            app:roundedCornerRadius="@dimen/dp_5" />

        <View
            android:layout_width="@dimen/dp_10"
            android:layout_height="match_parent" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:placeholderImage="@mipmap/ic_placeholder"
            app:placeholderImageScaleType="fitXY"
            app:roundedCornerRadius="@dimen/dp_5" />

        <View
            android:layout_width="@dimen/dp_10"
            android:layout_height="match_parent" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:placeholderImage="@mipmap/ic_placeholder"
            app:placeholderImageScaleType="fitXY"
            app:roundedCornerRadius="@dimen/dp_5" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.fenghuang.baselib.widget.round.RoundTextView
            android:id="@+id/tvTag_h3"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_18"
            android:gravity="center"
            android:text="活动"
            android:textColor="#FD8208"
            android:textSize="@dimen/sp_12"
            app:rv_backgroundColor="#FFF9E8"
            app:rv_cornerRadius="@dimen/dp_9" />


        <TextView
            android:id="@+id/tvTime_h3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_30"
            android:text="10分钟前"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/dp_10" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/color_EEEEEE" />
</LinearLayout>