<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:toos="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.fenghuang.baselib.widget.round.RoundLinearLayout
        android:layout_width="@dimen/dp_316"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rv_backgroundColor="@color/white"
        app:rv_cornerRadius="@dimen/dp_12">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/color_333333"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_20"
            android:text="推广申请"/>


        <com.fenghuang.baselib.widget.round.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:rv_cornerRadius="5dp"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal"
            app:rv_backgroundColor="@color/color_f6f6f6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_5"
                android:textColor="@color/color_333333"
                android:gravity="center"
                android:text="QQ"/>
            <EditText
                android:id="@+id/et_qq"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_5"
                android:textColor="@color/color_333333"
                android:maxEms="13"
                android:maxLength="13"
                android:textSize="@dimen/sp_13"
                android:inputType="number"
                android:gravity="center_vertical"
                android:background="@null"/>

        </com.fenghuang.baselib.widget.round.RoundLinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5"
            android:textSize="@dimen/sp_12"
            android:text="请输入QQ联系方式"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:orientation="horizontal">

            <com.fenghuang.baselib.widget.round.RoundTextView
                android:id="@+id/tvReportCancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_14"
                android:visibility="gone"
                app:rv_backgroundColor="@color/color_f5f5f5"
                app:rv_cornerRadius="@dimen/dp_23" />

            <TextView
                android:id="@+id/tvReportConfirm"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_marginStart="@dimen/dp_22"
                android:layout_marginEnd="@dimen/dp_30"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

    </com.fenghuang.baselib.widget.round.RoundLinearLayout>

</RelativeLayout>