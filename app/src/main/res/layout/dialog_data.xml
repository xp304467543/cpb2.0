<?xml version="1.0" encoding="utf-8"?>
<com.fenghuang.baselib.widget.round.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/imgLeft"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/dp_15"
                android:src="@mipmap/ic_tol"/>

            <TextView
                android:id="@+id/tvTopData"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_333333"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/imgRight"
                android:layout_width="@dimen/dp_50"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_tor"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvSure"
            android:layout_width="@dimen/dp_80"
            android:layout_height="match_parent"
            android:text="确定"
            android:gravity="center"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/text_red"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/white" />

    <com.fenghuang.caipiaobao.widget.calendarview.widget.CalendarView
        android:id="@+id/mCalendarView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_240"
        android:background="@android:color/white"
        app:cv_selectTextColor="@color/text_red"
        app:cv_textColor="#333333"
        app:cv_textSize="14sp" />
</com.fenghuang.baselib.widget.round.RoundLinearLayout>