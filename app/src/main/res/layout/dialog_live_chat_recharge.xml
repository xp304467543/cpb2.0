<?xml version="1.0" encoding="utf-8"?>
<com.fenghuang.baselib.widget.round.RoundRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="314dp"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:rv_cornerRadius="@dimen/dp_15">


    <com.fenghuang.baselib.widget.round.RoundRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:layout_centerInParent="true"
        app:rv_backgroundColor="@color/white"
        app:rv_backgroundPressColor="@color/white"
        app:rv_cornerRadius="@dimen/dp_15">

        <ImageView
            android:id="@+id/ivLiveChatRecharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_home_live_chat_recharge_tip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tvRechargeTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivLiveChatRecharge"
            android:layout_centerHorizontal="true"
            android:text="余额不足,请兑换"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivLiveChatRecharge" />

        <com.fenghuang.baselib.widget.round.RoundTextView
            android:id="@+id/tvRechargeCancel"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_40"
            android:layout_below="@id/tvRechargeTip"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_26"
            android:gravity="center"
            android:text="@string/app_cancel"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvRechargeTip"
            app:rv_backgroundColor="@color/color_f5f5f5"
            app:rv_backgroundPressColor="@color/color_f5f5f5"
            app:rv_cornerRadius="@dimen/dp_40" />

        <com.fenghuang.baselib.widget.round.RoundTextView
            android:id="@+id/tvGoRecharge"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_40"
            android:layout_below="@id/tvRechargeTip"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_26"
            android:layout_marginEnd="@dimen/dp_30"
            android:gravity="center"
            android:text="去兑换"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvRechargeTip"
            app:rv_backgroundColor="@color/color_FF513E"
            app:rv_backgroundPressColor="@color/color_FF513E"
            app:rv_cornerRadius="@dimen/dp_40" />
    </com.fenghuang.baselib.widget.round.RoundRelativeLayout>

</com.fenghuang.baselib.widget.round.RoundRelativeLayout>
