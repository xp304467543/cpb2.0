<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_15">

    <TextView
        android:id="@+id/tvTitle_h4"
        android:layout_width="0dp"
        android:paddingEnd="@dimen/dp_10"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_14"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintEnd_toStartOf="@+id/img_h4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="dsfsfsfsfs"
        tools:ignore="RtlSymmetry" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img_h4"
        android:layout_width="@dimen/dp_95"
        android:layout_height="@dimen/dp_62"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:placeholderImage="@mipmap/ic_placeholder"
        app:placeholderImageScaleType="fitXY"
        app:roundedCornerRadius="@dimen/dp_5" />


    <com.fenghuang.baselib.widget.round.RoundTextView
        android:id="@+id/tvTag_h4"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_10"
        app:rv_cornerRadius="@dimen/dp_9"
        app:rv_backgroundColor="#FFF9E8"
        android:text="活动"
        android:textSize="@dimen/sp_12"
        android:gravity="center"
        android:textColor="#FD8208"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/img_h4"/>

    <TextView
        android:id="@+id/tvTime_h4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_30"
        android:textSize="@dimen/dp_10"
        android:textColor="@color/color_999999"
        android:text="10分钟前"
        app:layout_constraintTop_toTopOf="@+id/tvTag_h4"
        app:layout_constraintBottom_toBottomOf="@+id/tvTag_h4"
        app:layout_constraintStart_toEndOf="@+id/tvTag_h4"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:layout_marginTop="@dimen/dp_15"
        app:layout_constraintTop_toBottomOf="@+id/tvTag_h4"
        android:background="@color/color_EEEEEE"/>
</androidx.constraintlayout.widget.ConstraintLayout>