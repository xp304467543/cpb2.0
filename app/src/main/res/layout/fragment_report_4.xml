<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1786F3">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_20">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_tg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.fenghuang.baselib.widget.round.RoundTextView
                android:id="@+id/tv_poet"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_350"
                android:layout_marginEnd="@dimen/dp_15"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_25"
                android:paddingEnd="@dimen/dp_15"
                android:text="@string/mine_report"
                android:textSize="@dimen/sp_14"
                app:layout_constraintTop_toTopOf="parent"
                app:rv_backgroundColor="#D0E8FD"
                app:rv_cornerRadius="@dimen/dp_5" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="340dp"
                android:src="@mipmap/ic_tg_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.fenghuang.baselib.widget.round.RoundLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15"
                app:layout_constraintTop_toBottomOf="@+id/tv_poet"
                app:rv_backgroundColor="#D0E8FD"
                app:rv_cornerRadius="@dimen/dp_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@mipmap/ic_v_1"
                    android:drawablePadding="@dimen/dp_15"
                    android:text="0-50人"
                    android:textColor="@color/color_333333" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:text="成功邀请一人立即到账3元-返现比例10%"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_12" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/line_stroke"
                    android:layerType="software" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:drawableStart="@mipmap/ic_v_2"
                    android:drawablePadding="@dimen/dp_15"
                    android:text="50-100人"
                    android:textColor="@color/color_333333" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:text="成功邀请立即到账3元-返现比例15%"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_12" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/line_stroke"
                    android:layerType="software" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:drawableStart="@mipmap/ic_v_3"
                    android:drawablePadding="@dimen/dp_15"
                    android:text="100-200人"
                    android:textColor="@color/color_333333" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:text="成功邀请立即到账5元-返现比例20%"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_12" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/line_stroke"
                    android:layerType="software" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:drawableStart="@mipmap/ic_v_4"
                    android:drawablePadding="@dimen/dp_15"
                    android:text="200-500人"
                    android:textColor="@color/color_333333" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:text="成功邀请立即到账5元-返现比例25%"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_12" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/line_stroke"
                    android:layerType="software" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:drawableStart="@mipmap/ic_v_5"
                    android:drawablePadding="@dimen/dp_15"
                    android:text="500-1000人"
                    android:textColor="@color/color_333333" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:text="成功邀请立即到账10元-返现比例30%"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_12" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/line_stroke"
                    android:layerType="software" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:drawableStart="@mipmap/ic_v_6"
                    android:drawablePadding="@dimen/dp_15"
                    android:text="1000人以上"
                    android:textColor="@color/color_333333" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:text="成功邀请立即到账10元-返现比例35%"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_12" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/line_stroke"
                    android:layerType="software" />

            </com.fenghuang.baselib.widget.round.RoundLinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/tvGetReportCode"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/dp_45"
        android:layout_marginEnd="@dimen/dp_45"
        android:background="@drawable/button_background"
        android:text="申请推广员"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />
</RelativeLayout>