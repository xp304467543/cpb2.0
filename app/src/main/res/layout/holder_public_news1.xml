<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/dp_15"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvTitle_h1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_14"
        tools:text= "dsfsfsfsfs"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/contentImg_h1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:layout_marginTop="@dimen/dp_14"
        app:roundedCornerRadius="5dp"
        app:placeholderImage="@mipmap/ic_placeholder"
        app:placeholderImageScaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle_h1"/>

        <com.fenghuang.baselib.widget.round.RoundTextView
            android:id="@+id/tvTag_h1"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_10"
            app:rv_cornerRadius="@dimen/dp_9"
            app:rv_backgroundColor="#FFF9E8"
            android:text="活动"
            android:textSize="@dimen/sp_12"
            android:gravity="center"
            android:textColor="#FD8208"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contentImg_h1"/>

    <TextView
        android:id="@+id/tvTime_h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_30"
        android:textSize="@dimen/dp_10"
        android:textColor="@color/color_999999"
        android:text="10分钟前"
        app:layout_constraintTop_toTopOf="@+id/tvTag_h1"
        app:layout_constraintBottom_toBottomOf="@+id/tvTag_h1"
        app:layout_constraintStart_toEndOf="@+id/tvTag_h1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:layout_marginTop="@dimen/dp_15"
        app:layout_constraintTop_toBottomOf="@+id/tvTag_h1"
        android:background="@color/color_EEEEEE"/>
</androidx.constraintlayout.widget.ConstraintLayout>