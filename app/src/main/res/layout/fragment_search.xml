<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!--状态栏-->
    <View
        android:id="@+id/statusView"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_45"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.fenghuang.baselib.widget.round.RoundRelativeLayout
        android:id="@+id/bar"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_15"
        app:layout_constraintEnd_toStartOf="@+id/tvClose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statusView"
        app:rv_backgroundColor="@color/color_F5F7FA"
        app:rv_cornerRadius="@dimen/dp_15">

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:drawableStart="@mipmap/ic_search_grey"
            android:drawablePadding="@dimen/dp_10"
            android:hint="请输入主播昵称、房间号搜索"
            android:paddingStart="@dimen/dp_10"
            android:textColorHint="@color/color_999999"
            android:textSize="@dimen/sp_12"
            tools:ignore="RtlSymmetry" />

    </com.fenghuang.baselib.widget.round.RoundRelativeLayout>

    <TextView
        android:id="@+id/tvClose"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginEnd="@dimen/dp_10"
        android:gravity="center"
        android:text="取消"
        android:textColor="#000000"
        android:textSize="@dimen/sp_15"
        app:layout_constraintBottom_toBottomOf="@+id/bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bar" />

    <!-- 推荐 -->
    <LinearLayout
        android:id="@+id/initRecommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_24"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:text="大家都在搜"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_12" />

        <com.fenghuang.caipiaobao.widget.FlowLayout
            android:id="@+id/flowLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/resultSearch"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        android:paddingTop="@dimen/dp_24"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bar">

        <LinearLayout
            android:id="@+id/rel1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- 搜结果 -->
            <LinearLayout
                android:id="@+id/searchResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"
                    android:text="搜索结果"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_15" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvResult"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never" />
            </LinearLayout>

            <!-- 没有结果-->
            <TextView
                android:id="@+id/tvNoResult"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="@dimen/dp_80"
                android:gravity="center"
                android:textSize="@dimen/sp_12"
                android:text="没有搜索相关信息"/>

            <!-- 搜推荐 -->
            <LinearLayout
                android:id="@+id/searchRecommend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/searchResult"
                android:layout_marginTop="@dimen/dp_15"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"
                    android:text="相关推荐"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_15" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRelated"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>