<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="@dimen/dp_330"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <com.fenghuang.baselib.widget.round.RoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:rv_backgroundColor="@color/white"
        app:rv_cornerRadius="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40"
            android:text="您还未登陆或登录已过期"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/color_999999"
            android:layout_marginTop="@dimen/dp_11"
            android:text="请先登录后操作" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btDialogLogin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginEnd="@dimen/dp_35"
            android:background="@drawable/button_background"
            android:text="手机登录"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

        <com.fenghuang.baselib.widget.round.RoundTextView
            android:id="@+id/btDialogRegister"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:layout_marginStart="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_35"
            android:gravity="center"
            android:text="立即注册"
            android:textColor="#FF8067"
            android:textSize="@dimen/sp_16"
            app:rv_cornerRadius="@dimen/dp_23"
            app:rv_strokeColor="#FF8067"
            app:rv_strokeWidth="@dimen/dp_1" />

    </com.fenghuang.baselib.widget.round.RoundLinearLayout>

    <ImageView
        android:id="@+id/imgDialogLoginClose"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@mipmap/ic_close_round" />

</LinearLayout>