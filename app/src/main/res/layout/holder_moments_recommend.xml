<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="@dimen/dp_15"
    android:paddingTop="@dimen/dp_15"
    android:paddingEnd="@dimen/dp_15">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/imgRecommend"
        android:layout_width="@dimen/dp_55"
        android:layout_height="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_5"
        app:placeholderImage="@mipmap/ic_placeholder"
        app:placeholderImageScaleType="fitXY"
        app:roundedCornerRadius="@dimen/dp_2" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_toEndOf="@+id/imgRecommend"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvRecommendName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            tools:text="发挥好或" />

        <TextView
            android:id="@+id/tvRecommendContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_12"
            tools:text="发挥好或发挥好或" />

    </LinearLayout>

    <com.fenghuang.baselib.widget.round.RoundTextView
        android:id="@+id/tvDownLoad"
        android:layout_width="@dimen/dp_65"
        android:layout_height="@dimen/dp_25"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="@string/moments_download"
        android:textColor="@color/colorBluePrimaryDark"
        app:rv_backgroundColor="@color/color_EEEEEE"
        app:rv_cornerRadius="@dimen/dp12" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/imgRecommend"
        android:layout_marginStart="75dp"
        android:layout_marginTop="@dimen/sp_15"
        android:background="@color/color_EEEEEE" />
</RelativeLayout>